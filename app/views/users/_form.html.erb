

<%= form_for @user, html: { class: 'form-horizontal' } do |form| %>
	<div class="form-group">
	  <%= form.label :name, class: 'col-sm-2 control-label' %>
	  <div class="col-sm-3">
		  <%= form.text_field :name, placeholder: 'Name', class: 'form-control' %>
	  </div>
	</div>


	<div class="form-group">
	  <%= form.label :nickname, class: 'col-sm-2 control-label' %>
	  <div class="col-sm-3">
		  <%= form.text_field :nickname, placeholder: 'Nickname', class: 'form-control' %>
	  </div>
	</div>

	<div class="form-group">
	  <%= form.label :email, class: 'col-sm-2 control-label' %>
	  <div class="col-sm-3">
		  <% if @user.email == "example@na.com" %>
			  <%= form.email_field :email, :value => nil, placeholder: "Enter Your Email", class: 'form-control' %>
			<% else %>
			  <%= form.email_field :email, disabled: true, class: 'form-control' %>  
			<% end %>
	  </div>
	</div>

	<div class="form-group">
	  <%= form.label :desired_playtime, class: 'col-sm-2 control-label' %>
	  <div class="col-sm-3">
		  <%= form.number_field :desired_playtime, placeholder: 'Desired playtime', class: 'form-control' %>
	  </div>
	</div>

	<div class="form-group">
	  <%= form.label :privacy, class: 'col-sm-2 control-label' %>
	  <div class="col-sm-3">
		  <%= form.select :privacy, User.privacies.keys.to_a, {}, class: 'form-control' %>
	  </div>
	</div>

  <div class="submit-field form-group">
  	<div class="col-sm-offset-2 col-sm-3">
      <%= form.submit 'Update User', class: 'btn btn-default' %>
  	</div>
  </div>

	<div class="form-group">
  	<div class="col-sm-offset-2 col-sm-3">
      <%= link_to 'Log Out', logout_path, method: :delete, class: 'btn btn-default btn-signout' %>
  	</div>
  </div>
<% end %>
