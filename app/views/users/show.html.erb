
<div id="header" class="border border background-color-div">
  <div class ="row">
    <div class="col-lg-6">
       <div class="row" id="user-profile">
        <div class="col-sm-3">
          <%= image_tag current_user.avatar_url, class:"steam-avatar"%>
        </div>

          <div class="col-sm-3">
          <%= current_user.name%><br>
          <%= current_user.nickname %><br>
          <%= current_user.email %>   
          <!-- Follow button--> 
         <% if User.check_follower(params[:id], current_user.id) && params[:id].to_i != current_user.id %>
        <%= form_for :follower, url: followers_path, method: :post, :html => {:class => "inline"} do |f| %>
          <%= f.hidden_field :user_id, value: params[:id] %>
          <%= f.hidden_field :follower_id, value: current_user.id %>
          <%= f.button "Follow", class: "btn btn-primary"  %>
        <% end %>
      <% elsif params[:id].to_i != current_user.id %>
        <%= form_for :follower, url: followers_path, method: :post, :html => {:class => "inline"} do |f| %>
          <%= f.hidden_field :user_id, value: params[:id] %>
          <%= f.hidden_field :follower_id, value: current_user.id %>
          <%= f.button "Unfollow", class: "btn btn-primary" %>
        <% end %>
      <% end %>
         <!-- Follow button end -->
          </div>
        </div>
        </div>
    <div class="col-lg-6">
      <div class="row">
        <div class="container-fluid">
        <!-- Skill Bars -->
            <div class="progress skill-bar ">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                    <span class="skill">Playtime today <i class="val">100%</i></span>
                </div>
            </div>
                
            <div class="progress skill-bar">
                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" >
                    <span class="skill">Playtime this week<i class="val">90%</i></span>
                </div>
            </div>
            
            <div class="progress skill-bar">
                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                    <span class="skill">Playtime this month<i class="val">75%</i></span>
                </div>
            </div>  
            
            <div class="progress skill-bar">
                <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100">
                    <span class="skill">Test<i class="val">55%</i></span>
                </div>
            </div>  
          </div>
    </div>
    </div>
    </div>
  </div>
</div>
<div id="body">
  <div id="left">
    <ul class="nav nav-pills">
      <li class="active"><a data-toggle="pill" href="#overall">Overall</a></li>
      <li><a data-toggle="pill" href="#stats">Stats</a></li>
      <li><a data-toggle="pill" href="#history">History</a></li>
      <li><a data-toggle="pill" href="#settings">Settings</a></li>
    </ul>

    <div class="tab-content">
      <div id="overall" class="tab-pane fade in active">
        <h3>Overall</h3>
        <%= line_chart @chart, curve: false %>
      </div>
      <div id="stats" class="tab-pane fade">
        <h3>Stats</h3>
        <p>Stat content</p>
      </div>
      <div id="history" class="tab-pane fade">
        <h3>History</h3>
        <p>history content</p>
      </div>
      <div id="settings" class="tab-pane fade">
        <h3>Settings</h3>
        <p>Settings content</p>
      </div>
    </div>
  
    <div id="content" class="border background-color-div"></div>

  </div>
  <div id="right">
    <div id="about_me" class="border background-color-div">
      <h3>About me</h3>
      <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
    </div>
    <div id="my_games" class="border background-color-div">
      <h3>My Games</h3>
      <ul>game1</ul>
      <ul>game2</ul>
      <ul>game3</ul>
    </div>
    <div id="my_achievements" class="border background-color-div">
      <h3>Achievements</h3>
      <% @badges.each do |badge| %>
        <div class="<%= 'achieved' if @user.achievements.find_by(badge_id: badge.id).status %>">
          <%= badge.image %>
          <%= badge.name %>
          <%= badge.description %>
        </div>
      <% end %>
    </div>
  </div>
</div>
