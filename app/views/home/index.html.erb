
<header >
	<div class="row">
		<div class="col-sm-4">
			<h1 class="display-3">SmartGamer</h1>
		</div>
	</div>
</header>

<div class="container-quote">
	<blockquote class="blockquote col-sm-offset-3 col-sm-6">
		<p><%= @quote["quoteText"] %></p>
		<% quote_author = @quote["quoteAuthor"] %>
		<footer class="blockquote-footer"><%= quote_author.empty? ? "unknown" : quote_author %></footer>
	</blockquote>
</div>

<div class="container" >
	<div class="row">
		<div class="col-sm-8">
			
			<div class="row">
				<div class="col-sm-9"><h3 class="h3-title">Articles</h3></div>
				<div class="col-sm-3">
					<%= link_to articles_path, class: 'btn btn-default align-bottom' do %>
						View all articles
					<% end %>
				</div>
			</div>
			
			<div class="row">			
				<div class="col-sm-9">
					<% first_article = @articles_home.first %>
					<%= link_to article_path(first_article), target: "_self" do %>
						<% if first_article.image %>
							<%= image_tag first_article.image, title: article.title, class: "article-image-main" %>
						<% else %>
							<%#= image_tag '/assets/placeholder.jpg', class: "article-image-main" %>
							<div class="text-center article-text-main"><span><%= first_article.title %></span></div>
						<% end %>
					<% end %>
			
					<% second_articles = @articles_home.slice(1..2) %>
					<% second_articles.each do |article| %>
						<%= link_to article_path(article), target: "_self" do %>
							<% if article.image %>
								<%= image_tag article.image, title: article.title, class: "article-image-second-long" %>
							<% else %>
								<div class="text-center article-text-second-long"><span><%= article.title %></span></div>
							<% end %>
						<% end %>
					<% end %>
				</div>

				<div class="col-sm-3">
					<% second_articles = @articles_home.slice(3..6) %>
					<% second_articles.each do |article| %>
						<%= link_to article_path(article), target: "_self" do %>
							<% if article.image %>
								<%= image_tag article.image, title: article.title, class: "article-image-second" %>
							<% else %>
								<div class="text-center article-text-second"><span><%= article.title %></span></div>
							<% end %>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>


		<div class="col-sm-4">
			<h3 class="h3-title">Activity</h3>
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="activity-pic">
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="activity-pic">
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="activity-pic">
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="activity-pic">
		</div>
	</div>


	<div class="row">

		<div class="col-sm-6">
			<div class="row">
				<div class="col-sm-9"><h3 class="h3-title">People</h3></div>
				<div class="col-sm-3">
				</div>
			</div>

			<table data-toggle="table" class="home-user-table">
				<thead>
					<tr>
						<th data-sortable="true">User</th>
						<th data-sortable="true">Today Playtime</th>
						<th data-sortable="true">Total Playtime</th>
					</tr>
				</thead>

				<tbody>
					<% @users_home.each do |user| %>
						<tr>
							<td><%= image_tag user.avatar_url, title: user.nickname, class: "" %> <%= user.nickname %></td>
							<% user_playtimes = user.playtimes %>
							<% user_total_playtime = user_playtimes.maximum(:total_playtime) %>
							<td><%= user_playtimes.where(total_playtime: user_total_playtime)[0].today_playtime %></td>
							<td><%= user_total_playtime %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>


		<div class="col-sm-6">
			<div class="row">
				<div class="col-sm-9"><h3 class="h3-title">Followers</h3></div>
				<div class="col-sm-3">
				</div>
			</div>
		</div>
	</div>


	<div class="row">
		<h3 class="h3-title">Meetups</h3>
		<div class="col-md-6">
			<img src='/assets/placeholder.jpg' alt="Main article image" class="article-image-main">

			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="article-image-second-long">

			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="article-image-second-long">

		</div>
		<div class="col-sm-2">
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="article-image-second">
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="article-image-second">
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="article-image-second">
		</div>
		<div class="col-sm-4">
			<h3 class="h3-title">Meet your friends</h3>
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="activity-pic">
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="activity-pic">
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="activity-pic">
			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="activity-pic">
		</div>
		<div class="col-sm-2">

		</div>


	</div>


</div>
