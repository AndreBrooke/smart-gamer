
<header >
	<div class="row">
		<div class="col-sm-4">
			<h1 class="display-3">SmartGamer</h1>
		</div>
	</div>
</header>

<div class="container-quote">
	<blockquote class="blockquote col-sm-offset-3 col-sm-6">
		<p><%= @quote["quoteText"] %></p>
		<% quote_author = @quote["quoteAuthor"] %>
		<footer class="blockquote-footer"><%= quote_author.empty? ? "unknown" : quote_author %></footer>
	</blockquote>
</div>

<div class="container" >
	<div class="row">
		<h3 class="h3-title">Articles</h3>
		<div class="col-sm-6">

			
			<% first_article = @articles_home.first %>
			<%= link_to article_path(first_article), target: "_self" do %>
				<% if first_article.image %>
					<%= image_tag first_article.image, class: "article-image-main" %>
				<% else %>
					<%#= image_tag '/assets/placeholder.jpg', class: "article-image-main" %>
					<div class="text-center article-text-main"><span><%= first_article.title %></span></div>
				<% end %>
			<% end %>
	
			<% second_articles = @articles_home.slice(1..2) %>
			<% second_articles.each do |article| %>
				<%= link_to article_path(article), target: "_self" do %>
					<% if article.image %>
						<%= image_tag article.image, class: "article-image-second-long" %>
					<% else %>
						<div class="text-center article-text-second-long"><span><%= article.title %></span></div>
					<% end %>
				<% end %>
			<% end %>

		</div>
		<div class="col-sm-2">

		<% second_articles = @articles_home.slice(3..5) %>
		<% second_articles.each do |article| %>
			<%= link_to article_path(article), target: "_self" do %>
				<% if article.image %>
					<%= image_tag article.image, class: "article-image-second" %>
				<% else %>
					<div class="text-center article-text-second"><span><%= article.title %></span></div>
				<% end %>
			<% end %>
		<% end %>


			<img src='/assets/placeholder.jpg' alt="secondary article image"  class="article-image-second">

		</div>
		
