<%= form_for @article, html: { class: 'form-horizontal' } do |form| %>
	
	<!-- Article title -->
	<div class="form-group">
	  <%= form.label :link, class: 'col-sm-2 control-label' %>
	  <div class="col-sm-9">
		  <%= form.text_field :url, required: true, class: 'form-control' %>
	  </div>
	</div>

	<!-- Submit button to create article -->
  <div class="form-group text-center">
      <%= form.submit 'Share article', class: 'btn btn-default' %>
  </div>

<% end %>