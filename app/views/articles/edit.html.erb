<%= form_for @article, html: { class: 'form-horizontal' } do |form| %>
	<%= render partial: '/articles/form', object: form %>

	<!-- Submit button to update article -->
  <div class="form-group text-center">
      <%= form.submit 'Update article', class: 'btn btn-default' %>
  </div>

	<!-- Back button -->
  <div class="text-center">
      <%= link_to 'Back', :back %>
  </div>
<% end %>