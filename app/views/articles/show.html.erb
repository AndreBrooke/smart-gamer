
<% if @article.url %>
	<div><%= @article.url %></div>
	<div><%= image_tag(@article.image, height: '200') %></div>
<% end %>

<div><%= @article.title %></div>

<div><%= @article.content %></div>

<% @article.comments.each do |comment| %>
	<p><%= comment.reply_article %>
		<%= link_to 'Edit Comment', edit_article_comment_path(@article, comment) if comment.user_id == current_user.id %>
	</p>
<% end %>
