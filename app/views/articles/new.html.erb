<div class="panel-group">
	<!-- Admin share 3rd party articles -->
	<div class="panel panel-default">
		<div class="panel-heading">Share article</div>
		<div class="panel-body">
			<%= render partial: '/articles/share' %>
		</div>
	</div>

	<!-- Admin create inhouse articles -->
	<div class="panel panel-default">
		<div class="panel-heading">Create article</div>
		<div class="panel-body">
			<%= form_for @article, html: { class: 'form-horizontal' } do |form| %>
				<%= render partial: '/articles/form', object: form %>

				<!-- Submit button to create article -->
			  <div class="form-group text-center">
			      <%= form.submit 'Create article', class: 'btn btn-default' %>
			  </div>

			<% end %>
		</div>
	</div>
</div>
